<idea-plugin version="2">
  <id>com.github.pbetkier.intellij.synonyms</id>
  <name>Synonyms</name>
  <version>0.1</version>
  <vendor url="http://github.com/pbetkier">Piotr Betkier</vendor>

  <description>
      View the synonyms for the current word under cursor.
      Makes your tough naming decisions less painful.
  </description>

  <idea-version since-build="135"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <actions>
      <action id="ShowSynonyms" class="synonyms.application.ui.ShowSynonymsAction" text="Show synonyms" description="Shows synonyms">
          <add-to-group group-id="QuickActions" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="alt Y"/>
      </action>
  </actions>

</idea-plugin>