<idea-plugin version="2">
  <id>com.github.pbetkier.intellij.synonyms</id>
  <name>Synonyms</name>
  <vendor email="pbetkier@gmail.com" url="http://github.com/pbetkier">Piotr Betkier</vendor>

  <description>
      View the synonyms for the current word under cursor.
      Makes your tough naming decisions less painful.
  </description>

  <change-notes><![CDATA[
    Release notes are available on the <a href="https://github.com/pbetkier/intellij-synonyms/releases">project's github page</a>.
]]>
  </change-notes>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>

  <actions>
      <action id="ShowSynonyms" class="synonyms.application.ui.ShowSynonymsAction" text="Show Synonyms" description="Shows synonyms">
          <add-to-group group-id="QuickActions" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="alt Y"/>
      </action>
  </actions>

</idea-plugin>
